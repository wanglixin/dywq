@model Dywq.Web.Dto.Article.PolicyArticleDTO
@{
    var types = ViewBag.types as IEnumerable<Dywq.Web.Dto.Article.PolicyTypeDTO>;
}
@section head{
    <link href="~/css/company_add.css" rel="stylesheet" />

    <script src="~/wangEditor/wangEditor.js"></script>
    <link href="~/wangEditor/wangEditor-fullscreen-plugin.css" rel="stylesheet" />
    <script src="~/wangEditor/wangEditor-fullscreen-plugin.js"></script>
    <style>
        .add_txt a {
            color: white;
        }

        .tools {
            margin-bottom: 20px;
        }

        .field-item {
            width: 100%;
        }

            .field-item span {
                width: 15%;
            }

            .field-item .cb {
                margin-left: initial;
                width: 50%;
            }
    </style>
}



<h2>惠企政策详情</h2>
<div class="tools">
    <div class="left_btns">
        <div class="addbtn">
            <span class="add_txt"><a href="javascript:history.go(-1)">返回</a></span>
        </div>
    </div>

</div>

<form id="form_data">

    <input type="hidden" name="Id" value="@(Model?.Id)" />
    <input type="hidden" name="Content" value="@(Model?.Content)" />
    <div class="field-group">
        <fieldset>
            <legend>填写信息</legend>

            <div class="field-item ">
                <span>政策类型</span>
                <select name="PolicyTypeId">
                    @{
                        foreach (var item in types)
                        {
                            <option value="@(item.Id)" @(Model?.PolicyTypeId == item.Id ? "selected=\"selected\"" : "")>
                                @(item.Name)
                            </option>
                        }
                    }
                </select>

            </div>


            <div class="field-item ">
                <span>政策主题</span>
                <input type="text" name="ThemeTitle" value="@(Model?.ThemeTitle)" placeholder=" 必填">
            </div>

            <div class="field-item ">
                <span>来源</span>
                <input type="text" name="Source" value="@(Model?.Source)" placeholder=" 必填">
            </div>

            <div class="field-item ">
                <span>政策内容</span>
                <div id="editor" style="width: 51%;">
                    <p>@(Html.Raw(Model?.Content))</p>
                </div>
            </div>

            @{
                if (Model != null)
                {
                    <div class="field-item ">
                        <span>发布时间</span>
                        <input type="text" disabled="disabled" value="@(Model?.CreatedTime)">
                    </div>
                }
            }

            <div class="field-item ">
                <span>显示</span>
                <select name="Show">
                    <option value="1" @(Model?.Show == true ? "selected=\"selected\"" : "")>
                        是
                    </option>
                    <option value="0" @(Model?.Show == false ? "selected=\"selected\"" : "")>
                        否
                    </option>
                </select>

            </div>

            <div class="field-item ">
                <span>排序</span>
                <input type="number" name="Sort" value="@(Model==null?0:Model?.Sort)" />
            </div>





        </fieldset>
    </div>

</form>

<div class="btn-box">
    <input type="button" class="btn-save" value="保存" />
</div>

@section js{
    <script type="text/javascript">



        $(function () {
            $(".btn-save").req("#form_data", "/api/article/editPolicyArticle", function (res) {
                if (res.code != 0) {
                    alert(res.message);
                    return;
                } else {
                    alert("保存成功");
                }

            });



            var E = window.wangEditor;
            var editor = new E('#editor');
            editor.customConfig.uploadImgServer = '/api/baseapi/EditorUploadImg';
            editor.customConfig.uploadFileName = 'file';
            editor.customConfig.onchange = function (html) {
                // 监控变化，同步更新到 textarea
                console.log(html);
                $("input[name='Content']").val(html);
            }
            editor.create();
            E.fullscreen.init('#editor');




        });





    </script>

}