@model Dywq.Web.Dto.Expert.ExpertDTO
@{
    var types = ViewBag.types as IEnumerable<Dywq.Web.Dto.Expert.ExpertTypeDTO>;

    Console.WriteLine(Newtonsoft.Json.JsonConvert.SerializeObject(types));
}
@section head{
    <link href="~/css/index10.css" rel="stylesheet" />
    <link href="~/css/company_add.css" rel="stylesheet" />

    <link href="~/css/pager.css" rel="stylesheet" />

    <script src="~/wangEditor/wangEditor.js"></script>
    <link href="~/wangEditor/wangEditor-fullscreen-plugin.css" rel="stylesheet" />
    <script src="~/wangEditor/wangEditor-fullscreen-plugin.js"></script>
    <style>
        .add_txt a {
            color: white;
        }

        .tools {
            margin-bottom: 20px;
        }

        .field-item {
            width: 100%;
        }

            .field-item span {
                width: 15%;
            }

            .field-item .cb {
                margin-left: initial;
                width: 50%;
            }

        .popbox {
            z-index: 20000;
        }

        .list {
            padding: 10px;
        }
    </style>
}



<h2>专家智库详情</h2>
<div class="tools">
    <div class="left_btns">
        <div class="addbtn">
            <span class="add_txt"><a href="javascript:history.go(-1)">返回</a></span>
        </div>
    </div>

</div>

<form id="form_data">

    <input type="hidden" name="Id" value="@(Model?.Id)" />
    <input type="hidden" name="Introduction" value="@(Model?.Introduction)" />
    <div class="field-group">
        <fieldset>
            <legend>信息展示</legend>

            <div class="field-item ">
                <span>类别</span>
                <select name="ExpertTypeId">
                    @{
                        if (types != null)
                        {
                            foreach (var type in types)
                            {
                                <option value="@(type.Id)" @(Model?.ExpertTypeId == type.Id ? "selected=\"selected\"" : "")>
                                    @(type.Name)
                                </option>
                            }

                        }

                    }
                </select>
            </div>

            <div class="field-item">
                <span>名字</span>
                <input type="text" name="Name" value="@(Model?.Name)" />
            </div>

            <div class="field-item">
                <span>职称</span>
                <input type="text" name="Title" value="@(Model?.Title)" />
            </div>



            <div class="field-item upload">
                <span>照片</span>
                <input type="file" id="PicFile" multiple />
                <input type="hidden" name="Pic" value="@(Model?.Pic)" />
                <input type="button" id="btnUpload" data-name="Pic" data-file="#PicFile" data-preview=".preview_img" value="上传" />

            </div>

            <div class="field-item">
                <span>图片预览</span>
                <img class="preview_img" src="@(Model?.Pic)" />
            </div>


            <div class="field-item ">
                <span>描述</span>

                <div id="editor" style="width: 51%;">
                    <p>@(Html.Raw(Model?.Introduction))</p>
                </div>
            </div>




            <div class="field-item ">
                <span>排序</span>
                <input type="number" name="Sort" value="@(Model==null?0:Model?.Sort)" />
            </div>

            @{
                if (Model != null)
                {
                    <div class="field-item ">
                        <span>添加时间</span>
                        <input type="text" disabled="disabled" value="@(Model?.CreatedTime)">
                    </div>
                }
            }





        </fieldset>
    </div>

</form>

<div class="btn-box">
    <input type="button" class="btn-save" value="保存" />
</div>


<!-- pop -->
<div class="popbox">
    <div class="list">

    </div>

    <!-- 底部推送 -->
    <div class="push_btns">
        <button class="push_btn_per btn push_btn_cancel">取消</button>
        @*<button class="push_btn_per btn push_btn_confirm">推送</button>*@
    </div>

</div>


@section js{
    <script type="text/javascript">

        $(function () {
            $(".btn-save").req("#form_data", "/api/expert/edit", function (res) {
                if (res.code != 0) {
                    alert(res.message);
                    return;
                } else {
                    alert("操作成功");
                }

            });
            $("#btnUpload").uploadImg(function (r, target) {
                if (r.code == 0) {
                    var name = target.attr("data-name");
                    var preview = target.attr("data-preview");
                    $("[name='" + name + "']").val(r.data);
                    $(preview).attr("src", r.data);
                } else {
                    alert(r.message);
                }
            });

            var E = window.wangEditor;
            var editor = new E('#editor');
            editor.customConfig.uploadImgServer = '/api/baseapi/EditorUploadImg';
            editor.customConfig.uploadFileName = 'file';
            editor.customConfig.onchange = function (html) {
                // 监控变化，同步更新到 textarea
                console.log(html);
                $("input[name='Introduction']").val(html);
            }
            editor.create();
            E.fullscreen.init('#editor');

        });

    </script>

}