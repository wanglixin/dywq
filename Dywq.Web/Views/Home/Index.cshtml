                        <div class="swiper-wrapper">
                            @{
                                foreach (var item in banners)
                                {
                                    <div class="swiper-slide">
                                         <a href="/company/detail/@(item.CompanyId)"><img src="@(item.IntroduceImage)" alt=""></a>
                                    </div>
                                }

                            }

