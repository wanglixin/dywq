@using Dywq.Infrastructure.Core.Extensions;
@model Dywq.Infrastructure.Core.PageResult<Dywq.Web.Dto.Article.PolicyArticleDTO>
@{
    var types = ViewBag.types as IEnumerable<Dywq.Web.Dto.Article.PolicyTypeDTO>;
    var typeId = (int)ViewBag.PolicyTypeId;
}
@section head{
    <link href="~/css/index3.css" rel="stylesheet" />
    <link href="~/css/pager.css" rel="stylesheet" />

    <style type="text/css">
        .paginabox .count {
            padding: 5px;
            margin: 5px;
            display: inline-block;
            min-width: 32px;
            height: 32px;
            text-align: center;
            color: rgba(102, 102, 102, 1);
            font-size: 14px;
            background: #fff;
            border-radius: 6px;
        }
        .sec_tab a{
            color:black;
            text-decoration:none;
        }
         .sec_tab li.tab_active a{
             color:white;
         }
    </style>

}
<div class="container">
    <div id="banner">
        <img src="" alt="">
        <h4>惠企政策</h4>
    </div>
</div>
<!-- sec -->
<section class="content_sec">
    <div class="container">
        <div class="sec_con">
            <ul class="sec_tab">
                @{
                    foreach (var type in types)
                    {
                        <li class="@(typeId==type.Id?"tab_active":"")"><a href="/article/policy?PolicyTypeId=@(type.Id)">@(type.Name)</a> </li>
                    }
                }
            </ul>
        </div>
    </div>

    <div class="container">
        <ul class="tab_con">
            @{
                if (Model.Data != null)
                {
                    foreach (var item in Model.Data)
                    {
                        <li>
                            <div class="tab_title">
                                <div class="title_left">
                                    <div class="ling"></div>
                                    <h2><a href="/article/policyDetail/@(item.Id)">@(item.ThemeTitle.Cut(40))</a></h2>
                                </div>
                                <div class="title_right">发布日期：@(item.CreatedTime)</div>
                            </div>
                            <p>@(item.Content.Cut(300))</p>
                        </li>
                    }
                }
            }


        </ul>


    </div>

</section>

<section class="paginabox">
    @Html.Raw(Model?.Pager)
</section>


