@model IEnumerable<Dywq.Web.Dto.Expert.ExpertGroupDTO>

@section head{
    <link href="~/css/index6.css" rel="stylesheet" />
    <link href="~/css/pager.css" rel="stylesheet" />

    <style type="text/css">
        .paginabox .count {
            padding: 5px;
            margin: 5px;
            display: inline-block;
            min-width: 32px;
            height: 32px;
            text-align: center;
            color: rgba(102, 102, 102, 1);
            font-size: 14px;
            background: #fff;
            border-radius: 6px;
        }

        .sec_tab a {
            color: black;
            text-decoration: none;
        }

        .sec_tab li.tab_active a {
            color: white;
        }

        .sec_con li a {
            color: black;
        }

        .con ul {
            display: initial;
        }

        .con li {
            display: initial;
            float: left;
            text-align: center;
            width: 33.3333333%;
            margin-left: 0;
            margin-bottom: 20px;
        }

        .con {
            overflow: hidden;
        }
        .con a{
            text-decoration:none;
        }
    </style>

}

<div class="container">
    <div id="banner">
        <img src="" alt="">
        <h4>专家库</h4>
    </div>
</div>
<!-- sec -->
<div class="container">
    @{
        if (Model != null)
        {
            foreach (var type in Model)
            {
                <section class="con">
                    <h2 class="con_title">@(type.ExpertType.Name)</h2>
                    <ul>
                        @{

                            foreach (var item in type.Experts)
                            {
                                <li>
                                    <a href="/company/expert/@(item.Id)">
                                        <img src="@(item.Pic)" alt="">
                                        <div class="name">@(item.Name)</div>
                                        <div class="job">@(item.Title)</div>
                                    </a>
                                </li>

                            }
                        }

                    </ul>
                </section>

            }
        }
    }

</div>

